---
import Layout from '../layouts/Layout.astro';
import Content from '../layouts/Content.astro';
import Nav from '../components/Navigation.astro';
import {Icon} from "astro-icon/components"

---

<Layout title="Marius N. Haugen">
    <main>
	<Content>
        <h1 class="text-4xl pl-16 w-52 mt-16" transition:name="title-contact">Contact</h1>
            <div class="flex w-full h-[60%] justify-center align-middle -ml-32 mt-32">
            <div class="flex flex-col justify-center text-3xl">
                <h1 class="mb-8 align-center text-5xl ">Marius N. Haugen</h1>
                <h2 class="mb-3 text-gray-400">mariusnhaugen@gmail.com <button id="copy-btn">
                    <Icon  name="material-symbols:content-copy-outline" class="clipboard-icon w-10 h-10 -mb-2 text-gray-600" />
                    <Icon  name="material-symbols:check-small" class="check-icon w-10 h-10 -mb-2 text-gray-600 hidden" />
                </button></h2> 

                <h2 class="text-gray-400">greater london area</h2>
            </div>
        </div>
	</Content>

	</main>
    <script>
        const btn = document.getElementById("copy-btn");
        
        btn.addEventListener("click", async () => {
                await navigator.clipboard.writeText("mariusnhaugen@gmail.com");
            
                const clipboardIcon = btn.querySelector(".clipboard-icon");
                const checkIcon = btn.querySelector(".check-icon");

                clipboardIcon.classList.add("hidden");
                checkIcon.classList.remove("hidden");

                setTimeout(() => {
                    clipboardIcon.classList.remove("hidden");
                    checkIcon.classList.add("hidden");
                }, 2500);
          });
        </script>
</Layout>

